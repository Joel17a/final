{# templates/dragonball/dragonball.html.twig #}

<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <meta charset="UTF-8">
    <title>Personajes de Dragon Ball</title>
</head>
<body>

    <h1>Personajes de Dragon Ball</h1>

    {% if characters is not empty %}
        <ul>
            {% for character in characters %}
                <li>
                    {# Comprobación para mostrar el nombre #}
                    {% if character.name is defined %}
                        <strong>{{ character.name }}</strong>
                    {% else %}
                        <strong>Nombre desconocido</strong>
                    {% endif %}
                    
                    {# Información adicional #}
                    <ul>
                        <li>Especie: {{ character.species|default('Desconocido') }}</li>
                        <li>Género: {{ character.gender|default('Desconocido') }}</li>
                    </ul>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No se encontraron personajes.</p>
    {% endif %}

</body>
</html>



